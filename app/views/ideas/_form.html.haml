.row.well
  = simple_form_for @idea, :html => { :class => 'span6 form-horizontal' }, :defaults => { :input_html => { :class => 'input-xlarge span8' } } do |f|
    %fieldset
      %legend Details
      = f.input :title
      = f.input :description, :input_html => { :rows => 8 }
      = f.input :categories, :as => :select
      .form-actions.ideahub
        = f.button :submit, :class => 'btn btn-primary btn-large'

